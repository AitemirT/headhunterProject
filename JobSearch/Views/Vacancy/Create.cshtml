@model JobSearch.Models.Vacancy

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mb-3">Создать новую вакансию</h2>

<div class="row">
    
    <div class="col-md-5 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 border border-1 bg-light rounded-2 p-3">
                <div class="form-group text-center mb-3">
                    <label asp-for="Title" class="control-label mb-2">Название вакансии</label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group text-center mb-3">
                    <label asp-for="Salary" class="control-label mb-2">Заработная плата</label>
                    <input asp-for="Salary" class="form-control"/>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 text-center">
                    <label asp-for="Description" class="control-label mb-2">Описание вакансии</label>
                    <textarea class="form-control" style="resize: none"  asp-for="Description" rows="15"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group text-center mb-3">
                    <label asp-for="MinExperience" class="control-label mb-2">Опыт работы от</label>
                    <input asp-for="MinExperience" class="form-control"/>
                    <span asp-validation-for="MinExperience" class="text-danger"></span>
                </div>
                <div class="form-group text-center mb-3">
                    <label asp-for="MaxExperience" class="control-label mb-2">Опыт работы до</label>
                    <input asp-for="MaxExperience" class="form-control"/>
                    <span asp-validation-for="MaxExperience" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 text-center">
                    <label asp-for="JobCategoryId" class="control-label mb-2"></label>
                    <select asp-for="JobCategoryId" class="form-control" asp-items="ViewBag.JobCategoryId"></select>
                </div>
            </div>
            
            <div class="form-group d-flex justify-content-center w-100">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
